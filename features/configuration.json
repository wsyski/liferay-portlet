{
  "$schema": "https://raw.githubusercontent.com/liferay/liferay-js-toolkit/master/resources/schemas/configuration.schema.json",
  "portletInstance": {
    "fields": {
      "isFullWidthMode": {
        "type": "boolean",
        "name": "isFullWidthMode",
        "description": "isFullWidthModeDescription",
        "default": "false"
      },
      "viewMode": {
        "type": "string",
        "name": "viewMode",
        "description": "viewModeDescription",
        "default": "FULL",
        "options": {
          "FULL": "viewModeFull",
          "BRIEF": "viewModeBrief"
        }
      },
      "visibleComponents": {
        "type": "string",
        "name": "visibleComponents",
        "description": "visibleComponentsDescription",
        "default": "eventLocation",
        "options": {
          "eventLocation": "eventLocation"
        },
        "repeatable": true
      },
      "pageSize": {
        "type": "string",
        "name": "pageSize",
        "description": "pageSizeDescription",
        "default": "8"
      },
      "eventDetailPage": {
        "type": "string",
        "name": "eventDetailPage",
        "description": "eventDetailPageDescription",
        "default": "/web/arena/events"
      },
      "locations": {
        "type": "string",
        "name": "locations",
        "description": "locationsDescription",
        "options": {
        },
        "repeatable": true
      },
      "targetAudiences": {
        "type": "string",
        "name": "targetAudiences",
        "description": "targetAudiencesDescription",
        "options": {
        },
        "repeatable": true
      },
      "tags": {
        "type": "string",
        "name": "tags",
        "description": "tagsDescription",
        "options": {
        },
        "repeatable": true
      }
    }
  }
}
